# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET  /public/*file        controllers.Assets.at(path="/public", file)

GET         /wishlists                     com.sap.yaas.wishlist.controllers.Application.getWishlists(pageNumber: Option[Int] ?= None, pageSize: Option[Int] ?= None)
POST        /wishlists                     com.sap.yaas.wishlist.controllers.Application.create()

GET         /wishlists/:wishlistId         com.sap.yaas.wishlist.controllers.Application.getWishlist(wishlistId: String)
PUT         /wishlists/:wishlistId         com.sap.yaas.wishlist.controllers.Application.update(wishlistId: String)
DELETE      /wishlists/:wishlistId         com.sap.yaas.wishlist.controllers.Application.delete(wishlistId: String)